<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorPrimary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/homescreen_options_panel_view_child_holder_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <FrameLayout
        android:id="@+id/homescreen_options_panel_view_child_holder_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/homescreen_options_panel_view_child_holder_toolbar" />
</RelativeLayout>